<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".swj.StartActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mainTitle_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目信息"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_start"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_start"
        app:layout_constraintStart_toStartOf="@+id/toolbar_start"
        app:layout_constraintTop_toTopOf="@+id/toolbar_start" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/fourbottom" />

    <FrameLayout
        android:id="@+id/main_fagement"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_start"
        app:layout_constraintVertical_bias="0.0">
    </FrameLayout>

</android.support.constraint.ConstraintLayout>